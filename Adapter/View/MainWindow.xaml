<Window x:Class="Adapter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adapter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Background="WhiteSmoke">
            <TextBlock Text="Name : " FontSize="25" Margin="60,40,0,0"></TextBlock>
            <TextBox Name="NameTxtBox" FontSize="24" Margin="-150,-28,0,0" Width="250" Height="30"></TextBox>
            <TextBlock Text="Surname : " FontSize="25" Margin="60,40,0,0"></TextBlock>
            <TextBox Name="SurnameTxtBox" FontSize="24" Margin="-150,-28,0,0" Width="250" Height="30"></TextBox>
            <TextBlock Text="Email : " FontSize="25" Margin="60,40,0,0"></TextBlock>
            <TextBox Name="EmailTxtBox" FontSize="24" Margin="-150,-28,0,0" Width="250" Height="30"></TextBox>
            <CheckBox Name="XMLChkBox" Content="XML" Width="50" Margin="-620,40,0,0"></CheckBox>
            <CheckBox Name="JSONChkBox" Content="JSON" Width="50" Margin="-620,40,0,0"></CheckBox>
            <Button Command="{Binding SaveCommand}" Width="100" Height="30" Content="Save" FontSize="22" Background="Orange" Margin="-165,0,0,0"></Button>
        </StackPanel>
    </Grid>
</Window>
